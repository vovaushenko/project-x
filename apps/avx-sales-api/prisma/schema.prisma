generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("AVX_DB_URL")
}


model AVXUser {
  id       String     @id @default(uuid()) 
  name     String
  email    String     @unique
  role     AuthorizationRole    @default(user)
  password String
  isActive Boolean
}

enum AuthorizationRole {
  admin
  user
  guest
  superdmin
}